{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["vite/client", "react", "react-dom", "vitest/globals", "node"],   // <-- add these
    "baseUrl": "./src",
    "paths": { "@/*": ["*"] }
  },
  "scripts": {
    "test": "vitest",
    "test:watch": "vitest watch"
  },
  "include": ["src", "src/main.tsx"]
}
